; boot option input field position
; bootopt.pos=280,453
bootopt.pos=280,400

[install]
; show welcome animation
welcome=0
; beep when menu is ready
beep=1
; Fn key assignment values can be one of:
; help lang timezone options1 xvid_res vga_res desktop
;
; note2: F9 enables speech output, F10 exits gfxboot
; note3: F1 must be set if desired (help|about)

; >>>>>>>>>> antiX Function key menu >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
key.F1=help
key.F2=lang
key.F3=timezone
key.F4=options1
key.F5=xvid_res
key.F6=desktop
